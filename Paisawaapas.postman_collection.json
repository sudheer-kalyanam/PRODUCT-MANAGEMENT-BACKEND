{
  "info": {
    "name": "Paisawaapas Product API",
    "_postman_id": "12345678-aaaa-bbbb-cccc-1234567890ab",
    "description": "Postman collection for CRUD operations on Product API with Cloudinary image upload",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Products",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/products",
          "host": ["{{base_url}}"],
          "path": ["api", "products"]
        }
      }
    },
    {
      "name": "Get Product by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/products/{{productId}}",
          "host": ["{{base_url}}"],
          "path": ["api", "products", "{{productId}}"]
        }
      }
    },
    {
      "name": "Add Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "multipart/form-data"
          }
        ],
        "body": {
          "mode": "formdata",
          "formdata": [
            { "key": "name", "value": "Nike Air Zoom Pegasus", "type": "text" },
            { "key": "description", "value": "Lightweight running shoes", "type": "text" },
            { "key": "price", "value": "8999", "type": "text" },
            { "key": "category", "value": "Fashion", "type": "text" },
            { "key": "size", "value": "M", "type": "text" },
            { "key": "stock", "value": "50", "type": "text" },
            { "key": "sku", "value": "NIK-PEG-001", "type": "text" },
            { "key": "tags", "value": "shoes,running,nike", "type": "text" },
            { "key": "images", "type": "file", "src": "/path/to/image1.jpg" },
            { "key": "images", "type": "file", "src": "/path/to/image2.jpg" }
          ]
        },
        "url": {
          "raw": "{{base_url}}/api/products",
          "host": ["{{base_url}}"],
          "path": ["api", "products"]
        }
      }
    },
    {
      "name": "Update Product",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"price\": 7999,\n  \"stock\": 30\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/products/{{productId}}",
          "host": ["{{base_url}}"],
          "path": ["api", "products", "{{productId}}"]
        }
      }
    },
    {
      "name": "Delete Product",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/products/{{productId}}",
          "host": ["{{base_url}}"],
          "path": ["api", "products", "{{productId}}"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "productId",
      "value": "replace_with_real_id"
    }
  ]
}
